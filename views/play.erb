<div class="container">
  <div class="row">
    <div class="col-8">
      <%# for top left side of screen %>
      <div class="card shadow border-primary"> 
        <h5 class="card-title">Hangman Body</h5>
        <% if @game.gallows %>
            <p>-------------</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>        ----|----</p>
        <% elsif @game.head%>
            <p>-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>        ----|----</p>
        <% elsif @game.body%>
            <p>-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>  |         |</p>
            <p>  |         |</p>
            <p>            |</p>
            <p>        ----|----</p>
        <% elsif @game.rarm%>
            <p>-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>--|         |</p>
            <p>  |         |</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>            |</p>
            <p>        ----|----</p>
        <% elsif @game.larm%>
            <p>-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>--|--       |</p>
            <p>  |         |</p>
            <p>            |</p>
            <p>        ----|----</p>
        <% elsif @game.rleg%>
            <p>-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>--|--       |</p>
            <p>  |         |</p>
            <p>   \        |</p>
            <p>        ----|----</p>
        <% else %>%
            <p>"-------------</p>
            <p>  |         |</p>
            <p>  O         |</p>
            <p>--|--       |</p>
            <p>  |         |</p>
            <p> / \        |</p>
            <p>        ----|----</p>
        <%end%>
      </div>
    </div>
    <div class="col-4">
      <%# # for right side of screen %>
      <div class="card shadow border-primary">
        <h5 class="card-title">Incorrect Letters</h5>
        <ul class="card-text"> incorrect letters here </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <%# # for bottom left side of screen %>
      <div class="card shadow border-primary">
        <p> word to guess / letters guessed correctly </p>
      </div>
    </div>
    <div class="col-4">
      <%# # for bottom right side of screen %>
      <div class="card shadow border-primary">

        <form action='/play' method='post'>
          <input name="_method" type="hidden" value="patch">
          <div class="form-group">
            <label for="letter">Enter your letter guess (example "a"):</label>
            <input id="letter" name="letter" class="form-control" type="text">
          </div>
          <button type="submit" class="btn">Submit Letter Guess!</button>
        </form>

      </div>
    </div>
  </div>
</div>